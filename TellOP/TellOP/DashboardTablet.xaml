<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:TellOP;assembly=TellOP"
            x:Class="TellOP.DashboardTablet"
            Title="{local:Translate Dashboard_Title}">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="10, 20, 10, 0" Android="0, 0" WinPhone="10, 0" />
  </ContentPage.Padding>
  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="refreshButton" Text="{local:Translate ButtonRefresh}" Icon="Toolbar_Refresh_Black.png" Order="Primary" Clicked="RefreshButton_Clicked" />
    <ToolbarItem x:Name="searchButton" Text="{local:Translate ButtonSearch}" Icon="Toolbar_Search.png" Order="Primary" Clicked="SearchButton_Clicked" />
    <ToolbarItem x:Name="settingsButton" Text="{local:Translate ButtonSettings}" Icon="Toolbar_Settings.png" Order="Primary" Clicked="SettingsButton_Clicked" />
  </ContentPage.ToolbarItems>
  <Grid x:Name="MainGrid" Padding="5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>

    <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding AppTip.Result.Text}" HorizontalOptions="CenterAndExpand" FontAttributes="Italic" Margin="5" />
  
  </Grid>
</ContentPage>
