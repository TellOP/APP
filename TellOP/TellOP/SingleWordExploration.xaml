<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TellOP.SingleWordExploration">
  <ScrollView>
    <StackLayout>
      <Label FontSize="Large" FontAttributes="Bold" x:Name="TitleLabel" HorizontalOptions="CenterAndExpand" />
      <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="Start">
        <Button Text="Stands4" Clicked="OpenStands4" HorizontalOptions="CenterAndExpand" />
        <Button Text="Collins" Clicked="OpenCollins" HorizontalOptions="CenterAndExpand"/>
        <!--<Button Text="NetSpeak" Clicked="OpenNetSpeak" HorizontalOptions="CenterAndExpand" />-->
        <!--<Button Text="StringNet" Clicked="OpenStringNet" HorizontalOptions="CenterAndExpand"/>-->
      </StackLayout>
      <StackLayout HorizontalOptions="FillAndExpand" x:Name="Stands4Stack"/>
      <StackLayout HorizontalOptions="FillAndExpand" x:Name="CollinsStack" IsVisible="False" Padding="5"/>
      <!--<StackLayout HorizontalOptions="FillAndExpand" x:Name="NetSpeakStack" IsVisible="False" Padding="5"/>-->
      <!--<StackLayout HorizontalOptions="FillAndExpand" x:Name="StringNetStack" IsVisible="False" Padding="5"/>-->
      <StackLayout HorizontalOptions="FillAndExpand" x:Name="CollocationStack" Padding="5" />
    </StackLayout>
  </ScrollView>
</ContentPage>